{
  "functions": {
    "source": "/",
    "predeploy": ["npm run build functions"],
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      "**/apps/functions/**",
      "**/apps/volleymotion/**",
      "**/apps/volleymotion-e2e/**",
      "**/apps/homepage/**",
      "**/apps/homepage-e2e/**"
    ]
  },
  "hosting": {
    "public": "dist/apps/volleymotion",
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      "**/apps/functions/**",
      "**/apps/volleymotion/**",
      "**/apps/volleymotion-e2e/**",
      "**/apps/homepage/**",
      "**/apps/homepage-e2e/**"
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
