rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
     match /surveys/{surveyId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
     }
    
     match /surveys/{surveyId}/comments/{commentId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
     }

    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
     }
  }
}
